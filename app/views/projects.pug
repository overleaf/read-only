extends ./layout

block content
	.container
		.row-spaced
		.row
			.col-md-10.col-md-offset-1
				.card
					ul.structured-list.list-unstyled
						li
							strong Your Projects
						each project in projects
							hr.thin
							li.row
								.col-xs-10
									div(
										style="overflow: hidden; text-overflow: ellipsis;"
									)
										a(
											href=`/project/${project._id}`										
										)= project.name								
									span.small.subdued
										| Last updated:
										= project.lastUpdated.toString().match(/^(.*) \d\d:\d\d:\d\d/)[1]
								.col-xs-2
									a.btn.btn-primary(href=`/project/${project._id}`).pull-right Download
		.row-spaced
