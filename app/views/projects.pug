extends ./layout

block content
	.container
		.row-spaced
		.row
			.col-md-10.col-md-offset-1
				.card
					ul.structured-list.list-unstyled
						li(style="padding: 6px")
							strong Your Projects
						each project in projects
							li(style="padding: 6px")
								a.btn.btn-info(href=`/project/${project._id}`, style="color: white").pull-right Download
								a(href=`/project/${project._id}`)= project.name
								br
								span.small.subdued
									| Last updated:
									= project.lastUpdated.toString().match(/^(.*) \d\d:\d\d:\d\d/)[1]
		.row-spaced
